{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    },
    "declaration": true,
    "resolveJsonModule": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
